# 8311 HA Bridge Configuration
# Copy this file to .env and update with your values

# --- WAS-110 Device Settings ---
WAS_110_HOST=192.168.11.1
WAS_110_USER=root
WAS_110_PASS=
WAS_110_PORT=22

# --- Home Assistant MQTT Broker ---
HA_MQTT_BROKER=homeassistant.local
HA_MQTT_PORT=1883
HA_MQTT_USER=8311-ha-bridge
HA_MQTT_PASS=your_secure_mqtt_password_here

# --- Script Operation ---
POLL_INTERVAL_SECONDS=60
SSH_TIMEOUT_SECONDS=10
RECONNECT_DELAYS=5,10,30,60
HA_DISCOVERY_PREFIX=homeassistant
HA_ENTITY_BASE=8311
MQTT_CLIENT_ID=8311-ha-bridge
DEBUG_MODE=False
TEST_MODE=False

# --- Container quirks ---
# If ping causes problems in your container environment, set this to False.
PING_ENABLED=False

# Optional: override displayed version string
# VERSION=1.0.0
